<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bread</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <form action="" method="get">
        <!--AWAL from -->
        <div class="container-md">
            <h1>Bread</h1>
            <input type="hidden" name="page" value="1">
            <!-- mulai id -->
            <div class="row">
                <div class="col-md-1">
                    <input class="form-check-input" type="checkbox" name="idCheck" id="flexCheckDefault"
                        <%=query.idCheck ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">ID</label>
                </div>
                <div class="col-md-11">
                    <input type="id" placeholder="Tulis ID" name="id" class="form-control" id="id"
                        value="<%= query.id %>">
                </div>
            </div>
            <!-- akhir id -->
            <!-- mulai string -->
            <div class="row">
                <div class="col-md-1">
                    <input class="form-check-input" type="checkbox" name="stringCheck" id="flexCheckDefault"
                        <%=query.stringCheck ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">String</label>
                </div>
                <div class="col-md-11">
                    <input type="string" class="form-control" name="string" id="string" value="<%= query.string %>">
                </div>
            </div>
            <!-- Akhir string -->
            <!-- Mulai integer -->
            <div class="row">
                <div class="col-md-1">
                    <input class="form-check-input" type="checkbox" name="integerCheck" id="flexCheckDefault"
                        <%=query.integerCheck ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">Integer</label>
                </div>
                <div class="col-md-11">
                    <input type="number" class="form-control" name="integer" id="integer" value="<%= query.integer %>">
                </div>
            </div>
            <!-- Akhir integer -->
            <!-- mulai float -->
            <div class="row">
                <div class="col-md-1">
                    <input class="form-check-input" type="checkbox" name="floatCheck" id="flexCheckDefault"
                        <%=query.floatCheck ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">Float</label>
                </div>
                <div class="col-md-11">
                    <input type="number" class="form-control" name="float" id="float" value="<%= query.float %>">
                </div>
            </div>
            <!-- akhir float -->
            <!-- mulai date -->
            <div class="row">
                <div class="col-md-1">
                    <input class="form-check-input" type="checkbox" name="dateCheck" id="flexCheckDefault"
                        <%=query.dateCheck ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">date</label>
                </div>
                <div class="col-md-4">
                    <input type="date" class="form-control" id="float" name="startDate" value="<%= query.startDate %>">
                    To
                    <input type="date" class="form-control" id="float" name="endDate" value="<%= query.endDate %>">
                </div>
            </div>
            <!-- akhir date -->
            <!-- awal boolean -->
            <div class="row">
                <div class="col-md-1">
                    <input class="form-check-input" type="checkbox" name="booleanCheck" id="flexCheckDefault"
                        <%=query.booleanCheck ? 'checked' : '' %>>
                    <label class="form-check-label" for="flexCheckDefault">Boolean</label>
                </div>
                <div class="col-md-11">
                    <select class="form-select" aria-label="Default select example" name="boolean"
                        value="<%= query.boolean %>">
                        <option selected>Pilih</option>
                        <option value=true <%=query.booleans==1 ? 'selected' : '' %>>True</option>
                        <option value=false <%=query.booleans==0 ? 'selected' : '' %>>False</option>
                    </select>
                </div>
            </div>
            <br>
            <!-- akhir boolean -->
            <!-- button -->
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a href="/" class="btn btn-danger" role="button" aria-disabled="true">Reset</a>
                </div>
            </div>
        </div>
    </form>
    <!-- akhir button -->
    <!-- awal table -->
    <div class="container">
        <div class="row">
            <div class="col">

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">ID</th>
                            <th scope="col">String</th>
                            <th scope="col">Integer</th>
                            <th scope="col">Float</th>
                            <th scope="col">Date</th>
                            <th scope="col">Boolean</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((item, index)=>{%>
                            <tr>
                                <td>
                                    <%= index+1 %>
                                </td>
                                <td>
                                    <%= item.id %>
                                </td>
                                <td>
                                    <%= item.strings %>
                                </td>
                                <td>
                                    <%= item.integers %>
                                </td>
                                <td>
                                    <%= item.floats %>
                                </td>
                                <td>
                                    <%= moment(item.dates).format('ll') %>
                                </td>
                                <td>
                                    <%= item.booleans %>
                                </td>
                                <td>
                                    <a href="/edit/<%= item.id %>" class="btn btn-success" tabindex="-1" role="button"
                                        aria-disabled="true">Edit</a>
                                    <a href="/delete/<%= item.id%>" class="btn btn-danger" tabindex="-1" role="button"
                                        aria-disabled="true"
                                        onclick="return confirm('Are you sure you want to delete this data?')">Delete</a>
                                </td>
                            </tr>
                            <%})%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- akhir table -->
    <!-- pagination -->
    <div class="container">
        <div class="row">
            <div class="col">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <%if (page !=1 ) { %>
                                <a class="page-link"
                                    href="<%=url.replace(`page=${page}`,`page=${parseInt(page)-1}`)%>">Previous</a>
                                <% } %>
                        </li>

                        <% for (let i=1; i <=pages; i++) { %>
                            <li class="page-item <%= i == page ? 'active' : '' %>" aria-current="page">
                                <a class="page-link" href="<%=url.replace(`page=${page}`,`page=${i}`) %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>


                                <li class="page-item">
                                    <%if (page <=pages && page !=pages) { %>
                                        <a class="page-link"
                                            href="<%=url.replace(`page=${page}`,`page=${parseInt(page)+1}`)%>">Next</a>
                                        <% } %>
                                </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- Akhir pagination -->
    <!-- Mulai add -->
    <div class="container">
        <div class="row">
            <div class="col">
                <a href="/add" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Add</a>
            </div>
        </div>
        <!-- akhir add -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    </div>

</body>

</html>