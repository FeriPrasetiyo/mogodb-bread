<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <form action="" method="post">
    <div class="container-md">
      <h1>Edit Data</h1>
      <!-- awal ID -->
      <div class="row">
        <div class="col-1">
          <label for="disabledTextInput" class="form-label">ID</label>
        </div>
        <div class="col-11">
          <input class="form-control" type="text" name="id" value="<%= item.id %>" aria-label="Disabled input example"
            disabled readonly>
        </div>
      </div>
      <!-- Akhir ID -->
      <!-- Mulai String -->
      <div class="row">
        <div class="col-1">
          <label for="disabledTextInput" class="form-label">String</label>
        </div>
        <div class="col-11">
          <input type="String" class="form-control" name="strings" id="exampleFormControlInput1"
            value="<%= item.strings %>" placeholder="String">
        </div>
      </div>
      <!-- Akhir String -->
      <!-- Mulai Integer -->
      <div class="row">
        <div class="col-1">
          <label for="disabledTextInput" class="form-label">Integer</label>
        </div>
        <div class="col-11">
          <input type="integer" class="form-control" name="integers" id="exampleFormControlInput1"
            value="<%= item.integers %>" placeholder="Integer">
        </div>
      </div>
      <!-- Akhir Integer -->
      <!-- Awal float -->
      <div class="row">
        <div class="col-1">
          <label for="disabledTextInput" class="form-label">Float</label>
        </div>
        <div class="col-11">
          <input type="number" class="form-control" name="floats" id="exampleFormControlInput1"
            value="<%= item.floats %>" placeholder="Float" step="0.005">
        </div>
      </div>
      <!-- Akhir float -->
      <!-- Awal Date-->
      <div class="row">
        <div class="col-1">
          <label for="disabledTextInput" class="form-label">Date</label>
        </div>
        <div class="col-11">
          <input type="date" class="form-control" name="dates" id="exampleFormControlInput1"
            value="<%= moment(item.dates).format('YYYY-MM-DD') %>" placeholder="Date">
        </div>
      </div>
      <!-- Akhir Date -->
      <!-- Awal Boolean -->
      <div class="row">
        <div class="col-1">
          <label for="disabledTextInput" class="form-label">Boolean</label>
        </div>
        <div class="col-md-11">
          <select class="form-select" name="booleans" aria-label="Default select example">
            <option selected>Pilih</option>
            <option value=true <%=item.booleans==1 ? 'selected' : '' %>>True</option>
            <option value=false <%=item.booleans==0 ? 'selected' : '' %>>False</option>
          </select>
        </div>
      </div>
      <!-- Akhir Boolean -->
      <!-- Tombol update -->
      <div class="row">
        <div class="col">
          <form action="/edit" method="post">
            <button class="btn btn-primary" type="submit">Update</button>
          </form>
        </div>
      </div>
      <!-- Akhir update -->
    </div>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f11V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>